<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER_RIGHT" maxHeight="-Infinity"
      maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" HBox.hgrow="ALWAYS"
      xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.treasure.hunt.view.widget.NavigationController">
    <padding>
        <Insets left="10.0" right="10.0"/>
    </padding>
    <Button disable="true" fx:id="previousButton" mnemonicParsing="false" onAction="#previousButtonClicked"
            text="Previous"/>
    <TextField disable="true" fx:id="stepCountField" alignment="CENTER_RIGHT" prefWidth="-Infinity" text="0"
               onAction="#onEnter">
        <padding>
            <Insets left="6.0" right="6.0"/>
        </padding>
    </TextField>
    <Label fx:id="stepCountLabel" text="of 0"/>
    <Button disable="true" fx:id="nextButton" mnemonicParsing="false" onAction="#nextButtonClicked" text="Next"/>
</HBox>
